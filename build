#!/usr/bin/env bash
mkdir -p dist
echo "build src/choosefont.ls -> dist/choosefont.js ..."
./node_modules/.bin/lsc -cbp src/choosefont.ls > dist/choosefont.js
echo "build src/choosefont.styl -> dist/choosefont.css ..."
./node_modules/.bin/stylus -p src/choosefont.styl > dist/choosefont.css
echo "minifying choosefont.js ..."
./node_modules/.bin/uglifyjs dist/choosefont.js > dist/choosefont.min.js
echo "minifying choosefont.css ..."
./node_modules/.bin/uglifycss dist/choosefont.css > dist/choosefont.min.css
echo "done."
