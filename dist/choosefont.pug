//- module
mixin choosefont
  .choosefont.toolbar
    .choosefont-head.form-inline
      .dropdown
        .btn.btn-outline-secondary.dropdown-toggle(data-toggle="dropdown",data-category-holder="true") Family ...
        .dropdown-menu
          each name in ["All", "Serif", "Sans Serif", "Display", "Handwriting", "Monospace", "Chinese"]
            a.dropdown-item(href="#",data-category=name) #{name}
      input.form-control.mx-2
      .btn.btn-outline-secondary.btn-upload(data-action="upload") Upload #[input(type="file")]
    .choosefont-content
    block
